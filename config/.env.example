# NewsAPI.org - 100 запросов/день бесплатно
# https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here

# OpenAI API - для embeddings и рерайта
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Slack Webhook - для модерации новостей
# https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Twitter/X API - опционально (не используется в MVP)
# https://developer.twitter.com/
# TWITTER_BEARER_TOKEN=your_bearer_token_here
# TWITTER_CONSUMER_KEY=your_consumer_key_here
# TWITTER_CONSUMER_SECRET=your_consumer_secret_here
# TWITTER_ACCESS_TOKEN=your_access_token_here
# TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Google Sheets API (опционально, для логирования)
# GOOGLE_SHEETS_CREDENTIALS_FILE=path/to/credentials.json
# GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# n8n Basic Auth (для доступа к UI)
N8N_USER=admin
N8N_PASSWORD=changeme_secure_password
